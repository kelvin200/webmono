{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "target": "esnext",
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "rootDir": "../",
    "baseUrl": "./",
    "outDir": "./dist",
    "removeComments": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["../node_modules/@types"],
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["./dist", "./stories", "./.storybook", "./webpack.config.js"]
}
